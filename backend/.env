# =========================
# Core
# =========================
DJANGO_DEBUG=true
DJANGO_SECRET_KEY=change-me
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# =========================
# Frontend origins (Vite)
# =========================
FRONTEND_ORIGINS=http://127.0.0.1:5174,http://localhost:5174,http://127.0.0.1:5173,http://localhost:5173

# =========================
# Database
# =========================
# sqlite is default, but keeping URL is fine
DATABASE_URL=sqlite:///db.sqlite3

# =========================
# DRF & API behaviour
# =========================
# Pagination
PAGE_SIZE=12

# Throttles
THROTTLE_CART_ITEMS=200/min
THROTTLE_APPLY_COUPON=100/min
THROTTLE_ORDERS_PUBLIC=120/hour

# =========================
# Tax & shipping (orders.pricing)
# =========================
GST_RATE_PERCENT=18
FREE_SHIPPING_THRESHOLD=999.00
SHIPPING_FALLBACK_RATE=49.00

# =========================
# JWT lifetimes
# =========================
JWT_ACCESS_MINUTES=120
JWT_REFRESH_DAYS=7
JWT_ROTATE_REFRESH=false
JWT_BLACKLIST_AFTER_ROTATION=false

# =========================
# Cart behaviour
# =========================
CART_SESSION_ID=cart
CART_MERGE_STRATEGY=sum   # "sum" or "max"
CART_MAX_QTY=99

# =========================
# OpenAPI docs base URL
# =========================
OPENAPI_SERVER_URL=http://127.0.0.1:8000

# =========================
# Branding / Emails
# =========================
BRAND_NAME=My Shop
DEFAULT_FROM_EMAIL=
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# =========================
# Payments (mocked locally)
# =========================
PAYMENTS_MOCK=true
PAYMENT_CURRENCY=INR

# Leave these empty in dev (mock mode will be used)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# =========================
# Optional S3 (leave empty for local)
# =========================
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=
AWS_S3_CUSTOM_DOMAIN=

# =========================
# Logging
# =========================
LOG_LEVEL=INFO
DB_LOG_LEVEL=WARNING

# =========================
# CORS extra headers (optional)
# =========================
# If you need more custom headers, list them comma-separated.
# Otherwise, core/settings.py already sets a good default list.
# CORS_ALLOW_HEADERS=accept,accept-encoding,authorization,content-type,origin,user-agent,x-csrftoken,x-requested-with
